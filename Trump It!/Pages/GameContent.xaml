<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             x:Class="Trump_It_.Pages.GameContent"
             Title="GameContent"
             BackgroundColor="DarkSlateGray">
    <VerticalStackLayout>
        <Button
            Text="Home"
            FontSize="Medium"
            TextColor="WhiteSmoke"
            HeightRequest="30"
            WidthRequest="100"
            BackgroundColor="DarkSlateGray"
            HorizontalOptions="Start"
            Clicked="homeBtnClicked"
        ></Button>
        <skia:SKLottieView
            x:Name="deck_shuffle_anim"
            Source="deck_shuffle.json"
            IsAnimationEnabled="False"
            RepeatCount="2"
            HeightRequest="300"
            WidthRequest="300"
            />
        <Label 
            TextColor="AntiqueWhite"
            FontSize="20"
            FontAttributes="Bold"
            Margin="40"
            Text="This is the game space"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <HorizontalStackLayout
            HorizontalOptions="Center"
            VerticalOptions="End">
            
            <Grid 
            HeightRequest="200"
            WidthRequest="200"
            >

                <skia:SKLottieView
            x:Name="flip_card_anim_3"
            Source="card_flip.json"
            IsAnimationEnabled="False"
            HeightRequest="200"
            WidthRequest="200" 
            IsVisible="False"
             />

                <Image
            x:Name="card_face_3"
            IsVisible= "False"
            Aspect="AspectFit"
            HeightRequest="200"
            WidthRequest="200"
            />
            </Grid>
            
            <Grid 
            HeightRequest="200"
            WidthRequest="200"
            >

                <skia:SKLottieView
            x:Name="flip_card_anim_1"
            Source="card_flip.json"
            IsAnimationEnabled="False"
            HeightRequest="200"
            WidthRequest="200" 
            IsVisible="False"
             />

                <Image
            x:Name="card_face_1"
            IsVisible= "False"
            Aspect="AspectFit"
            HeightRequest="200"
            WidthRequest="200" 
            />
            </Grid>
            <Grid 
            HeightRequest="200"
            WidthRequest="200"
            >

                <skia:SKLottieView
            x:Name="flip_card_anim_0"
            Source="card_flip.json"
            IsAnimationEnabled="False"
            HeightRequest="200"
            WidthRequest="200" 
            IsVisible="False"
             />

                <Image
            x:Name="card_face_0"
            IsVisible= "False"
            Aspect="AspectFit"
            HeightRequest="200"
            WidthRequest="200" 
            />
            </Grid>
            
            <Grid 
            HeightRequest="200"
            WidthRequest="200"
            >

                <skia:SKLottieView
            x:Name="flip_card_anim_2"
            Source="card_flip.json"
            IsAnimationEnabled="False"
            HeightRequest="200"
            WidthRequest="200" 
            IsVisible="False"
             />

                <Image
            x:Name="card_face_2"
            IsVisible= "False"
            Aspect="AspectFit"
            HeightRequest="200"
            WidthRequest="200" 
            />
            </Grid>
            
            <Grid 
            HeightRequest="200"
            WidthRequest="200"
            >

                <skia:SKLottieView
            x:Name="flip_card_anim_4"
            Source="card_flip.json"
            IsAnimationEnabled="False"
            HeightRequest="200"
            WidthRequest="200" 
            IsVisible="False"
             />

                <Image
            x:Name="card_face_4"
            IsVisible= "False"
            Aspect="AspectFit"
            HeightRequest="200"
            WidthRequest="200" 
            />
            </Grid>
            
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>